<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/time_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        layout="@layout/bd_title_layout"/>

    <TextView
        android:id="@+id/time_sfm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSettingText"
        android:textSize="@dimen/sp_40"
        android:text="时：分：秒"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_120"
        android:gravity="center"/>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSettingText"
        android:textSize="@dimen/sp_20"
        android:layout_gravity="center"
        android:text="北斗标准时间"
        android:layout_marginTop="@dimen/dp_70"
        android:gravity="center"/>

    <TextView
        android:id="@+id/time_ymd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/sp_20"
        android:text="年：月：日：周"
        android:layout_marginTop="@dimen/dp_15"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center">

        <Button
            android:id="@+id/time_jiaoshi_btn"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:background="@color/colorMainBlue"
            android:gravity="center"
            android:text="@string/jiaoshi"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_14"/>


    </LinearLayout>


</LinearLayout>