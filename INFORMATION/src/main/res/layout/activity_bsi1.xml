<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/message_title"
        layout="@layout/bd_title_layout"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/bsi_earth_img"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:src="@mipmap/earth"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_400"
        android:background="@mipmap/earth_line"
        android:layout_above="@+id/bsi_earth_img"
        android:layout_marginBottom="-20dp"
        android:layout_marginLeft="@dimen/dp_30"/>

    <ImageView
        android:id="@+id/bsi_weixing5"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/weixing"
        android:layout_above="@+id/bsi_earth_img"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/bsi_weixing4"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/weixing"
        android:layout_marginBottom="@dimen/dp_10"
