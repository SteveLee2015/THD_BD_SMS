            <thd.bd.sms.view.CustomProgressView
                android:id="@+id/auto_progress_1"
                style="@style/bsi_signal_style"
                android:layout_toRightOf="@+id/tv_bsi1">
            </thd.bd.sms.view.CustomProgressView>

