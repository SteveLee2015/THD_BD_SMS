<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:padding="15dp">

    <TextView
        android:id="@+id/parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="2016-2-1 11:30"
        android:textColor="@color/colorSettingText"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/btn_parent_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_show_all"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorWhite"
        android:text="删除"
        android:textColor="@color/colorSettingText"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/btn_show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/colorWhite"
        android:text="地图显示"
        android:textColor="@color/colorSettingText"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/btn_parent_show_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_parent_del"
        android:background="@color/colorWhite"
        android:text="详情"
        android:textColor="@color/colorSettingText"
        android:textSize="14sp"/>

</RelativeLayout>
